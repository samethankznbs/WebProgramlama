
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using EntityLayer.Concrete
@model List<AppUser>


<!DOCTYPE html>
<html>

<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Rol Tablosu</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

    <table class="table table-hover">
    </thead>
    <tr>
        <th>Id</th>
        <th>AD</th>
         <th>SOYAD</th>
        <th>DOGUM TARİHİ</th>
        <th>CİNSİYET</th>
        <th>TELEFON NO</th>
        <th>EMAİL</th>
        <th>USERNAME </th>
      
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    </thead>
    <tbody>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.ad</td>
            <td>@item.soyad</td>
            <td>@item.dogumTarihi</td>
            <td>@item.cinsiyet</td>
            <td>@item.telefonNumarasi</td>
            <td>@item.Email</td>
            <td>@item.UserName</td>
                <td>

                      @if (item.ConfirmCodee == 0)
                    {
                        <h3> Aktif </h3>
                    }
                        else if (item.ConfirmCodee == 1)
                    {
                        <h3> Pasif </h3>
                    }
                    else
                    {

                    }

                </td>

                <td>
                    <a href="/Admin/AdminUser/KullaniciGuncelle/@item.Id" class="btn btn-outline-success">Güncelle</a>
                </td>
                   


               <td>
                    <a href="/Admin/AdminUser/KullaniciSilme/@item.Id" class="btn btn-outline-success">SİL</a>
               </td>
        </tr>
    }

    </tbody>
</table>

<br />
<br />

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>









