
@using yazlabyeto.Areas.Admin.Models
@model KullaniciGuncelleModel

@{
    ViewData["Title"] = "KullaniciGuncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h1>Kullanici Bilgilerini Düzenleme Sayfası</h1>

<form method="post">
    <div class="form-group">
        <div class="row">
            <input type="hidden" name="Id" class="form-control" value="@Model.Id" />
            <input type="hidden" name="Id" class="form-control" value="@Model.ConfirmCodee" />

            <div class="col-3">
                <h3> Ad </h3>
                <input type="text" name="ad" class="form-control" value="@Model.ad" />
            </div>

            <div class="col-3">
                <h3>Soyad  </h3>
                <input type="text" name="soyad" class="form-control" value="@Model.soyad" />
            </div>

            <div class="col-3">
                <h3> Dogum Tarihi </h3>
                <input type="text" name="dogumTarihi" class="form-control" value="@Model.dogumTarihi" />
            </div>

            <div class="col-3">
                <h3> Cinsiyet </h3>
                <input type="text" name="cinsiyet" class="form-control" value="@Model.cinsiyet" />
            </div>

            <div class="col-3">
                <h3> TelefonNO </h3>
                <input type="text" name="telefonNumarasi" class="form-control" value="@Model.telefonNumarasi" />
            </div>

            <div class="col-3">
                <h3> Email </h3>
                <input type="text" name="Email" class="form-control" value="@Model.Email" />
            </div>

            <div class="col-3">
                <h3> UserName </h3>
                <input type="text" name="UserName" class="form-control" value="@Model.UserName" />
            </div>


            <div class="col-3">
                <h3> Aktif / Pasif Yap </h3>


                <select @Model.ConfirmCodee name="ConfirmCode" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                    <option value="0">Aktif Yap</option>
                    <option value="1">Pasif Yap</option>

                </select>





            </div>
            <div class="col-3">
                <h3> Durumu </h3>

                @if (Model.ConfirmCodee == 0)
                {
                    <h2> <b class="text-success"> Aktif </b>  </h2>
                }
                else if (Model.ConfirmCodee == 1)
                {
                    <h2> Pasif </h2>
                }
                else
                {
                    <h2> Bilinmiyor </h2>

                }
            </div>

            <div class="col-3">
                <h3> Güncelle </h3>
                <button class="btn btn-success">Güncelle</button>

            </div>




        </div>
    </div>
    <br />
</form>










