
@using yazlabyeto.Areas.Admin.Models
@model List<RolAtamaModel>


@{
    ViewData["Title"] = "RolAtama";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleID" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
        </div>
    }
    <br />

    <button class="btn btn-outline-primary">Değişiklikleri kaydet</button>
</form>
<br />
<a href="/Admin/AdminRol/UserList/" class="btn btn-outline-primary">Kullanıcı listesi</a>
